{
	"name": "marketplace-hub",
	"description": "Full-Stack JavaScript with MongoDB, Express, AngularJS, and Node.js",
	"version": "0.0.1",
	"engines": {
		"node": "0.10.x",
		"npm": "1.4.x"
	},
	"scripts": {
		"start": "grunt",
		"test": "grunt test",
		"postinstall": "bower install --config.interactive=false" // What does this flag do
	},
	"dependencies": {
		"express": "~4.10.1",
		"express-session": "~1.9.1", // Handles session used for mongo and passport
