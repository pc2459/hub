		"bower": "~1.3.8", // Client side package manager
		"grunt-cli": "~0.1.13", // CLI for Grunt
		"glob": "~4.0.5", // Match files using the patterns the shell uses
		"async": "~0.9.0", // Utility for handling async 
		"nodemailer": "~1.3.0", // Email sender
		"chalk": "~0.5" // Colors console output - dev only?
	},
	"devDependencies": {
		// "supertest": "~0.14.0", // Assertions for testing requests
		"should": "~4.1.0", // BDD style assertions
		"grunt-env": "~0.4.1", // Sets node env for Grunt tasks
		"grunt-node-inspector": "~0.1.3", // Debugger interface for webkit browsers
		"grunt-contrib-watch": "~0.6.1", // Watches files being saved
