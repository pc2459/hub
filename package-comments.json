		"helmet": "~0.5.0", // Secures Express headers
		"consolidate": "~0.10.0", // Consolidation library for templates
		"swig": "~1.4.1", // Templating system for Express
		"mongoose": "~3.8.8", // Schemas for mondgodb docs
		"passport": "~0.2.0", // Authentication
		"passport-local": "~1.0.0", // Local passport strategy for username/password
