		// "passport-linkedin": "~0.1.3", // Linkin passport strategy
		// "passport-google-oauth": "~0.1.5", // Google passport strategy
		// "passport-github": "~0.1.5", // Github passport strategy
		"lodash": "~2.4.1", // Utility library for JS
